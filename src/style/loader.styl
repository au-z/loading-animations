@require('./mixins.styl')

*, *::before, *::after {
  box-sizing: border-box
}

html {
  height: 100%
  font-size: 24px
}

body {
  margin: 0
  min-height: 100%
}

section.anim-container {
  wh(100%, 100vh)
  flexXY(center, center)
  background: #333436
}

.loader {
  position: relative
}

.loader-1 {
  $loop = 4s
  $dim = 2.5rem

  wh($dim, $dim)
  animation: $loop linear infinite spinC
  & > div {
    absPos(0, auto, auto, 0)
    circle(2rem)
    background: #48E5C2
    animation: $loop * 0.5 ease-in-out infinite pulseSize
  }
  & > div:nth-child(2) {
    absPos(auto, 0, 0, auto)
    animation-delay: $loop * -0.25
  }
}

.loader-2 {
  outline: 1px solid red
  wh(6rem, 4rem)
  & > div {
    position: absolute
    circle(4rem)
    outline: 1px solid red
    &:nth-child(2) {
      left: 2rem
    }
    & > div {
      position: absolute
      circle(1rem)
      top: 2rem
      left: -0.5rem
      background: #A6CFD5
      transform: translate(0, -50%)
      &:nth-child(2) {
        left: auto
        right: -0.5rem
      }
    }
  }
}

@keyframes spinC {
  100% {
    transform: rotate(1turn)
  }
}

@keyframes pulseSize {
  50% {
    wh(10%, 10%)
  }
}